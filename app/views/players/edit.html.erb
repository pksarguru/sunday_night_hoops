<!-- Validation failure messages -->
<% if @player.errors.any? %>
  <% @player.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h2>Edit Guests</h2>
</div>

<h3><%= @player.full_name %></h3>
<h3><%= @player.game.game_date %></h3>

<div class="row">
  <div class="col-md-12">
    <form action="/update_player/<%= @player.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for guests -->
      <div class="form-group">
        <label for="guests" class="control-label">
          Guests
        </label>

        <input type="text" id="guests" name="guests" placeholder="Guests" class="form-control" value="<%= @player.guests %>">
      </div>

      <button class="btn btn-warning">
        Update Player
      </button>
      or
      <a href="/players/<%= @player.id %>">Cancel</a>
    </form>
  </div>
</div>
