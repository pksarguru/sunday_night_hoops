<div class="page-header">
  <h1>
    Players
    <a href="/people/new" class="btn btn-lg btn-success">
      Add New Player
    </a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>

      <% @people.each do |person| %>
      <tr>
        <td><%= person.full_name %></td>
        <td><%= person.email %></td>
        <td>
          <a href="/people/<%= person.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_person/<%= person.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
