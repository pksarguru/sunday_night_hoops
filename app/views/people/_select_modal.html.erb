<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">
        Select your name below:
      </h5>

      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <form action="/players" method="post">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <input type="hidden" name="game_id" value="<%= game.id %>">

      <div class="modal-body">
        <div class="form-group">
          <select class="form-control" name="person_id">
            <% people.each do |person| %>
              <option value="<%= person.id %>">
                <%= person.full_name %>
              </option>
            <% end %>
          </select>
        </div>

        <div class="form-inline mb-4">
          <label for="guests" class="col-2 col-form-label">
            Guests
          </label>

          <div class="col-10">
            <span>
              <button type="button" class="btn btn-outline-primary" id="guests-button-down">
                <%= fa_icon "minus" %>
              </button>
            </span>

            <input class="form-control mb-2 col-2 mb-sm-0" type="number" name="guests" value="0" id="guests" required>

            <span>
              <button type="button" class="btn btn-outline-primary" id="guests-button-up">
                <%= fa_icon "plus" %>
              </button>
            </span>
          </div>
        </div>

        <div class="form group">
          <button type="submit" class="btn-lg btn-success mb-4">
            Join Game
          </button>

          <div class="mb-2">
            Or if you don't see your name:
          </div>

          <a class="btn btn-success" href="/people/new">
            Add A New Player
          </a>
        </div>
      </div>
    </form>
  </div>
</div>
