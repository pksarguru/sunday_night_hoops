<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">
        Select or add your name below:
      </h5>

      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <form action="/players" method="post">
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <input type="hidden" name="game_id" value="<%= game.id %>">

      <div class="modal-body">
        <div class="form-group">
          <select class="form-control" name="person_id">
            <% people.each do |person| %>
              <option value="<%= person.id %>">
                <%= person.name %>
              </option>
            <% end %>
          </select>
        </div>

        <div class="form-group">
          <label for="guests" class="col-2 col-form-label">
            Guests
          </label>

          <div class="col-10">
            <input class="form-control" type="number" name="guests" value="0" id="guests">
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-success">
        Save Changes
      </button>
    </form>

    <a class="btn btn-success btn-lg" href="/people/new">
      Add A New Player
    </a>
  </div>
</div>
