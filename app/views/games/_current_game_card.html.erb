<div class="jumbotron">
  <div class="row">
    <div class="col-md-6">
      <h1 class="display-3"><%= game.game_date %></h1>
    </div>

    <div class="col-md-6">
      <h1 class="display-4">
        Players: <%= game.players.count %>
      </h1>
    </div>
  </div>

  <p>
    Current Players:
  </p>

  <ul>
    <% game.players.each do |player| %>
      <li><%= player.name %></li>
    <% end %>
  </ul>

  <p class="lead">
    <a class="btn btn-success btn-lg" href="#" type="button" data-toggle="modal" data-target="#selectPlayerModal">
      Join Game
    </a>
  </p>
</div>
